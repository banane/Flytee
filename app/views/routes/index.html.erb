<h1>Listing routes</h1>

<table>
  <tr>
    <th>Origin code</th>
    <th>Dest code</th>
    <th>Rank</th>
    <th>Pass per day</th>
    <th>Carrier code</th>
    <th>Ave fare</th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%=h route.origin_code %></td>
    <td><%=h route.dest_code %></td>
    <td><%=h route.rank %></td>
    <td><%=h route.pass_per_day %></td>
    <td><%=h route.carrier_code %></td>
    <td><%=h route.ave_fare %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New route', new_route_path %>