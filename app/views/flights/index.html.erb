<h1>Listing flights</h1>

<table>
  <tr>
    <th>From code</th>
    <th>To code</th>
    <th>From date</th>
    <th>To date</th>
    <th>Prebook date</th>
    <th>Boughtflag</th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%=h flight.from_code %></td>
    <td><%=h flight.to_code %></td>
    <td><%=h flight.from_date %></td>
    <td><%=h flight.to_date %></td>
    <td><%=h flight.prebook_date %></td>
    <td><%=h flight.boughtFlag %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New flight', new_flight_path %>