<h1>New flight</h1>

<% form_for(@flight) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :from_code %><br />
    <%= f.text_field :from_code %>
  </p>
  <p>
    <%= f.label :to_code %><br />
    <%= f.text_field :to_code %>
  </p>
  <p>
    <%= f.label :from_date %><br />
    <%= f.datetime_select :from_date %>
  </p>
  <p>
    <%= f.label :to_date %><br />
    <%= f.datetime_select :to_date %>
  </p>
  <p>
    <%= f.label :prebook_date %><br />
    <%= f.datetime_select :prebook_date %>
  </p>
  <p><input type='hidden' name="boughtFlag" value="0"></p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', flights_path %>